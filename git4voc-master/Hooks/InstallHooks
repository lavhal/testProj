#Copy implemented hooks 
for file in `ls -1 git4voc-master/Hooks`
do
 if [ $file != "InstallHooks" ]; then
   echo $file 
   cp git4voc-master/Hooks/$file .git/hooks/$file
   sudo chmod +x .git/hooks/$file
 fi
done


#Ignore tools folder using .gitignore
if [ ! -e ".gitignore" ]; then
  touch .gitignore
  echo "git4voc-master/" >> .gitignore
else
  if ! grep -q "git4voc-master" ".gitignore"; then
   echo "git4voc-master/" >> .gitignore
  fi
fi
